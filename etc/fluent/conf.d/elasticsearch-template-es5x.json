{
  "template" : "*",
  "mappings" : {
    "_default_" : {
      "properties" : {
        "geoip"  : {
          "dynamic": true,
          "properties" : {
            "location" : {
              "type" : "geo_point"
              },
            "latitude": {
              "type": "half_float"
            },
            "longitude": {
              "type": "half_float"
            }
          }
        },
        "firewall": {
          "dynamic": true,
          "properties" : {
            "destination.ip" : {
              "type" : "ip"
              },
            "source.ip": {
              "type": "ip"
            }
          }
        },
        "unifi.syslog*": {
          "dynamic": true,
          "properties" : {
            "firewall_source_ip": { "type": "ip", "ignore_malformed": "true" },
            "remote_ip": { "type": "ip", "ignore_malformed": "true" }
          }
        }
      }
    }
  }
}
