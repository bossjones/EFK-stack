{
  "template" : "*",
  "mappings" : {
    "_default_" : {
      "properties" : {
        "geoip"  : {
          "dynamic": true,
          "properties" : {
            "location" : {
              "type" : "geo_point"
              },
            "latitude": {
              "type": "half_float"
            },
            "longitude": {
              "type": "half_float"
            },
            "location_string": {
              "type": "text",
              "ignore_malformed": "true"
            },
            "location_array": {
              "type": "nested",
              "ignore_malformed": "true"
            },
            "postal_code" : {
              "type" : "text",
              "ignore_malformed": "true"
            },
            "city" : {
              "type" : "text",
              "ignore_malformed": "true"
            },
            "country" : {
              "type" : "text",
              "ignore_malformed": "true"
            },
            "country_name" : {
              "type" : "text",
              "ignore_malformed": "true"
            }
          }
        },
        "unifi.syslog*": {
          "dynamic": true,
          "properties" : {
            "firewall_source_ip": { "type": "ip", "ignore_malformed": "true" },
            "remote_ip": { "type": "ip", "ignore_malformed": "true" }
          }
        }
      }
    }
  }
}
